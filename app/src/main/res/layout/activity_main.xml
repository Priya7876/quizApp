<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagepriya"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="Up-To-Date"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_horizontal|center_vertical|bottom"
         />
<androidx.cardview.widget.CardView
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="14dp"
    card_view:cardElevation="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your name"
            android:gravity="center_horizontal"
            android:textSize="20dp"

            />


    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="Name"
        android:textColorHint="#5D6D7E "
        android:outlineAmbientShadowColor="@color/teal_200"
        android:id="@+id/editTexy"
        />

<Button
    android:textSize="25sp"
    android:layout_margin="10dp"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="START"
    android:textColor="@color/white"
    android:id="@+id/button1"
    />
</LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>